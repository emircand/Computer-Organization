`timescale 1ns / 1ps

module adder_tb;

    reg [31:0] a, b;
    reg cin;
    wire [31:0] sum;
    wire cout;

    // Instantiate the adder
    adder my_adder(
        .a(a), 
        .b(b), 
        .cin(cin), 
        .sum(sum), 
        .cout(cout)
    );

    initial begin
        // Initialize inputs
        a = 0; b = 0; cin = 0;

        // Apply test vectors
        // Test vector 1
        a = 32'd15; // 15 in decimal
        b = 32'd10; // 10 in decimal
        cin = 0;
        #10; // Wait for 10 ns

        // Display results
        $display("Time = %t, a = %d, b = %d, cin = %b, sum = %d, cout = %b", 
                 $time, a, b, cin, $signed(sum), cout);

        // Test vector 2 (you can add more test vectors here)
        // ...

        // Finish the simulation
        #10 $finish;
    end

endmodule
